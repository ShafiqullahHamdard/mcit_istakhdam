<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--form view for custom.department model-->
    <record model="ir.ui.view" id="hr_employee_form_view">
        <field name="name">hr.department.form</field>
        <field name="model">custom.department</field>
        <field name="arch" type="xml">
            <form string="Department">
                <sheet>
                    <group>
                        <group>
                            <field name="name" string ="ریاست " />
                            <field name ="parent_department" string ="ریاست عمومي"/>
<!--                            <field name ="Manager_id"  string ="رییس نوم"/>-->
<!--                            <field name ="parentDepartment"/>-->
                            <field name="employee_ids"  string ="کارمند"/>
                        </group>
                    </group>
                    <notebook>
                        <page string ="page1">
                          <filed name ="department_id"></filed>
                              <group><field name ="name"/>
                                 <field name ="Manager"/>
                                </group>
                               <tree editable ="bottom">
                                <field name ="name"/>
                                <field name ="Manager"/>
                            </tree>
                        </page>
                    </notebook>
                </sheet>

            </form>
        </field>
    </record>
    <!--tree view for custom.department-->
    <record id="view_hr_tree" model="ir.ui.view">
        <field name="name">view.hr.tree</field>
        <field name="model">custom.department</field>
        <field name="arch" type="xml">
            <tree string="Department Tree view">
                <field name="name" string ="ریاست " />
<!--                <field name ="Manager_id"  string ="رییس نوم"/>-->
                <field name ="parent_department" string ="ریاست عمومي"/>
   <!--                <field name ="parentDepartment"/>-->
   <!--                <field name ="manager" />-->
                <field name="employee_ids" />
            </tree>
        </field>
    </record>
<!--     search view-->
     <record id="view_hr_search" model="ir.ui.view">
        <field name="name"> </field>
        <field name="model">custom.department</field>
        <field name="arch" type="xml">
            <search string="Department_search_view">
                <field name="name"/>
                <filter name="Department_filter" string="Department" domain="[('name', '=', True)]"/>
            </search>
        </field>
    </record>
    <!-- Action Menu for custom.department model-->
    <record id="action_view_hr_department" model="ir.actions.act_window">
        <field name="name">Register Department</field>
        <field name="res_model">custom.department</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" eval="False"/>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="">
                No department Found!
            </p>
            <p>
                Please Register your first Department
            </p>
        </field>
    </record>
    <menuitem
            name="Department"
            id="department_root_menu"
            sequence="2"/>
    <menuitem
            name="Add Department"
            id="department_sub_menu"
            parent="department_root_menu"
            action="action_view_hr_department"
            sequence="5"/>

</odoo>